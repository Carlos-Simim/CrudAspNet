@model CadastroProdutos.Models.Produto

@{
    ViewData["Title"] = "CriarProduto";
}

<p id="Header">Cadastro de produto</p>
<hr />


<form asp-action="CriarProduto" asp-controller="Produtos">       
    <div style="display: table-row">
        <div style="width: 200px; display: table-cell;">
            <label asp-for="ProdutoId" class="control-label">Código</label>
            <input asp-for="ProdutoId " class="form-control" readonly="@(true)"/>
        </div>
        <div style="width: 30px; display: table-cell;">             
        </div>
         <div style="width: 1000px; display: table-cell;">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" class="form-control"/>
        </div>
    </div>      
    
    <div style="display: table-row">
        <div style="width: 200px; display: table-cell;">
            
            <label asp-for="DefSituacaoProdutoId">Situação</label>
            <select asp-for="DefSituacaoProdutoId" class="form-control">
                <option value="" selected disabled hidden>Selecione</option>
                <option value="1">Ativo</option>
                <option value="2">Inativo</option>
                <option value="3">Bloqueado</option>
            </select>
            <!--<input asp-for="DefSituacaoProdutoId" class="form-control"/>-->           
        </div> 

        <div style="width: 30px; display: table-cell;">             
        </div>

        <div style="width: 200px; display: table-cell;">
            <label asp-for="DefUnidadeComercialId">Unidade estoque</label>
            <select asp-for="DefUnidadeComercialId" class="form-control">
                <option value="" selected disabled hidden>Selecione</option>
                <option value="1">CX - Caixa</option>
                <option value="2">KG - Quilograma</option>
                <option value="3">L - Litro</option>
                <option value="4">PC - Peça</option>
                <option value="5">PCT - Pacote</option>
                <option value="6">UN - Unidade</option>
            </select>
            <!--<input asp-for="DefUnidadeComercialId" class="form-control"/>-->
        </div> 

        <div style="width: 30px; display: table-cell;">             
        </div>
        <div style="width: 200px; display: table-cell;">
            <label asp-for="PesoLiquido">Peso líquido (KG)</label>
            <input asp-for="PesoLiquido" class="form-control"/>
        </div>
    </div>
    <br>
    <p id="Header">Embalagens</p>
    <hr />
    <div style="width: 200px; display: table-cell;">
            <label asp-for="DefUnidadeComercial">Unidade</label>
            <input asp-for="DefUnidadeComercialId" class="form-control" readonly="@(true)"/>
    </div> 
    <div style="width: 30px; display: table-cell;">  
    </div>
    <div style="width: 200px; display: table-cell;">
            <label asp-for="ProdutoEmbalagems">Fator conv.</label>
            <input asp-for="ProdutoEmbalagems.ElementAt(0).FatorDeConversao" class="form-control"/>
    </div> 
    <div style="width: 30px; display: table-cell;">  
    </div>
    <div style="width: 200px; display: table-cell;">
            <label asp-for="ProdutoEmbalagems">Situação</label>
            <select asp-for="ProdutoEmbalagems.ElementAt(0).DefSituacaoProdutoEmbalagemId" class="form-control">
                <option value="" selected disabled hidden>Selecione</option>
                <option value="1">Ativo</option>
                <option value="2">Inativo</option>                
            </select>
            <!--<input asp-for="ProdutoEmbalagems.ElementAt(0).DefSituacaoProdutoEmbalagemId" class="form-control"/>-->
    </div> 
    <br>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" id="BotaoVerde" @Html.AntiForgeryToken()/>    
        <a asp-action="Index" class="btn btn-primary" id="BotaoCinza">Voltar</a>
    </div>

</form>

