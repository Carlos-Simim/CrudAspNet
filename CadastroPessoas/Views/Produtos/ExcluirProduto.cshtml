@model CadastroProdutos.Models.Produto

@{
    ViewData["Title"] = "ExcluirProduto";

}
<p id="Header">Exclusão de produto</p>
<hr />


<div id="WarningWrapper">
    <div id="WarningBody">
        <p><i class="fa-solid fa-triangle-exclamation"></i> Deseja realmente deletar esse registro?</p>
    </div>
</div>

<div>
    <div style="display: table-row">
        <div style="width: 200px; display: table-cell;">
            <label asp-for="ProdutoId" class="control-label">Código</label>
            <input asp-for="ProdutoId " class="form-control" readonly="@(true)"/>
        </div>
        <div style="width: 30px; display: table-cell;">             
        </div>
         <div style="width: 1000px; display: table-cell;">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" class="form-control" readonly="@(true)"/>
        </div>
    </div>      
    
    <div style="display: table-row">
        <div style="width: 200px; display: table-cell;">
            <label asp-for="DefSituacaoProduto">Situação</label>
            <input asp-for="DefSituacaoProdutoId" class="form-control" readonly="@(true)"/>
        </div> 
        <div style="width: 30px; display: table-cell;">             
        </div>
        <div style="width: 200px; display: table-cell;">
            <label asp-for="DefUnidadeComercial">Unidade estoque</label>
            <input asp-for="DefUnidadeComercialId" class="form-control" readonly="@(true)"/>
        </div> 
        <div style="width: 30px; display: table-cell;">             
        </div>
        <div style="width: 200px; display: table-cell;">
            <label asp-for="PesoLiquido">Peso líquido (KG)</label>
            <input asp-for="PesoLiquido" class="form-control" readonly="@(true)"/>
        </div>
    </div>
    <br>

    <form asp-action="ExcluirProduto">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Deletar" class="btn btn-primary" id="BotaoVerde" />
        <a asp-action="Index" class="btn btn-primary" id="BotaoCinza">Voltar</a>
    </form>
</div>
