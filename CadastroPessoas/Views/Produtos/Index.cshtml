@model IEnumerable<CadastroProdutos.Models.Produto>


@{
    ViewData["Title"] = "Index";
}

<h1>Cadastros</h1>

<p>
    <a asp-action="CriarProduto">Cadastrar novo produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Situação
            </th>            
        </tr>
    </thead>
    <tbody>

@foreach (Produto item in Model) {
        <tr>
            <td>
                @item.ProdutoID
            </td>
            <td>
                @item.Descricao
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefSituacaoProduto.DescricaoSituacao)
            </td>
            
            <td>
                <a asp-action="AtualizarProduto" asp-route-id="@item.ProdutoID">Edit</a> |
                <a asp-action="ExcluirProduto" asp-route-id="@item.ProdutoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
