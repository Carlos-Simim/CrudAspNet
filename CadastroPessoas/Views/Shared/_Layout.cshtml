<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CadastroProdutos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CadastroPessoas.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/1e007b941f.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    
    <div class="d-flex">
        <div class="bg-light border-light">

            <div class="list-group list-group-flush" id="MenuLateral">
                <br />
                <br />
                <br />
                <br />
                <br />
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Produtos" asp-action="Index" id="MenuLateral"><i class="fa-solid fa-cube"></i> Produto</a>                 
            </div>
        </div>
    </div>    
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
